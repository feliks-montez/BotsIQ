<h1>New Project</h1>
<%= form_for [@team,@project] do |f| %>
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div class="form-group">
    <%= f.label :deadline %>
    <%= f.date_select :deadline %>
  </div>
  
  <%= f.submit "Create Project", class: 'btn btn-primary' %>
<% end %>
