  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  
  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  
  <div class="form-group">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  
