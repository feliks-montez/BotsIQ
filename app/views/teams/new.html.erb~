<h1>New Team</h1>
<%= form_for @team do |f| %>
  
  <div class="form-group">
    <%= f.label :team_name %>
    <%= f.text_field :name %>
  </div>
  
  <div class="form-group">
    <%= f.label :captain_name %>
    <%= text_field_tag "captain_name", "", name: "team[captain_name]" %>
  </div>
  
  <div class="form-group">
    <%= f.label :captain_email %>
    <%= text_field_tag "captain_email", "", name: "team[captain_email]" %>
  </div>
  
  <div class="form-group">
    <%= f.label :captain_password %>
    <%= text_field_tag "captain_password", "", name: "team[captain_password]" %>
  </div>
  
  <div class="form-group">
    <%= f.label :confirm_password %>
    <%= text_field_tag "captain_confirm_password", "", name: "team[captain_confirm_password]" %>
  </div>
  
  <%= f.submit "Create Team", class: 'btn btn-primary' %>
<% end %>
